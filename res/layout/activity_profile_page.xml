<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="@drawable/cover_f"
    android:scaleType="fitXY" >

<LinearLayout 
    android:id="@+id/linearlayout5"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1"
    >

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profile_default"
        android:scaleType="fitXY"
  />

    <TextView
        android:id="@+id/p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/linearlayout_secret"
        android:layout_width="fill_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/my_secret"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="right"
            android:padding="0dp"
            android:textColor="@color/app_white"
            android:text="My Secret:"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/secret"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingLeft="4dp"
            android:textColor="@color/app_white"
            android:text="Secret"
            android:textSize="18sp"
            android:typeface="serif" />

    </LinearLayout>

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Gender"
        android:textColor="@color/app_white"
        android:textSize="18sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/app_white"
        android:text="Email"
        android:textSize="18sp"
        android:typeface="serif" />

   
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

 <ToggleButton
     android:id="@+id/toggle_follow"
     android:layout_width="0dp"
     android:layout_height="40dp"
     android:layout_weight="0.50"
     android:background="@drawable/button_custom2"
     android:onClick="onToggleClicked"
     android:padding="0dp"
     android:text="ToggleButton"
     android:textOff="Follow"
     android:textOn="unFollow"
     android:textSize="20sp"
     android:textStyle="bold"
     android:typeface="normal"
     android:textColor="#ffffff" />

        <Button
            android:id="@+id/my_question"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.50"
            android:background="@drawable/button_custom2"
            android:padding="0dp"
            android:text="My Questions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>